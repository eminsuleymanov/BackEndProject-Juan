@model IEnumerable<Product>

@foreach (Product product in Model)
{
    <li style="margin-top: 30px; background-color: white;">
        <a style="display: flex;flex-direction: row;align-items: center;  width: 90%; justify-content: space-around; ">
            <img style="width:110px" src="~/assets/img/product/@product.MainImage" alt="">
            <p>@product.Title</p>
            <div>
                @if (product.DiscountedPrice > 0)
                {
                    <span class="price-regular">$@(product.DiscountedPrice)</span>
                    <span class="price-old"><del>$@(product.Price)</del></span>

                }
                else
                {
                    <span class="price-regular">$@(product.Price)</span>
                }

            </div>
          
        </a>
    </li>

}

