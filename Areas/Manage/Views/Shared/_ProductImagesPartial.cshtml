@model IEnumerable<ProductImage>
@if (Model != null && Model.Count() > 0)
{
    @foreach (ProductImage productImage in Model)
    {
        <div class="col-lg-6">
            <img style="width:110px" src="~/assets/img/product/@productImage.Image" />
            @if (Model.Count() > 1)
            {
                <a asp-area="manage" asp-action="DeleteImageOfProduct" asp-controller="product" asp-route-id="@productImage.ProductId" data-imageId="@productImage.Id" style="width:122px;" class="btn btn-danger deleteImage">Delete Image </a>
            }
        </div>
    }
}