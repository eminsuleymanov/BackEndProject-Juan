@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-8">
        <h1 class="h3 mb-0 text-gray-800 mb-4"> Product Detail</h1>
    </div>
    <div class="col-lg-4">
        <a class="btn btn-primary" asp-area="manage" asp-controller="product" asp-action="index">Go To Home</a>
    </div>
</div>
<div class="row my-3">

    <div class="col-lg-5">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img style="width : 100px" src="~/assets/img/product/@Model.MainImage" />
                <h5 class="card-title"><strong>Product Name</strong> : @Model.Title</h5>
            </div>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th>Description</th>
                    <th>FullDescription</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>@Model.Title</th>
                    <th>@Model.CreatedBy</th>
                    <th>@Model.CreatedAt?.ToString("dd-MMMM-yyyy")</th>
                    <th>
                        <div class="product-description-short">
                            @Model.Description.Substring(0, 70)
                            @if (Model.Description.Length > 70)
                            {
                                <a href="#" class="show-more">Show More</a>
                            }
                        </div>
                        <div class="product-description-full" style="display: none">
                            @Model.Description
                            <a href="#" class="show-less">Show Less</a>
                        </div>


                    </th>
                    

                    <th>
                        <div class="product-description-short">
                            @Model.FullDescription.Substring(0, 70)
                            @if (Model.FullDescription.Length > 70)
                            {
                                <a href="#" class="show-more">Show More</a>
                            }
                        </div>
                        <div class="product-description-full" style="display: none">
                            @Model.FullDescription
                            <a href="#" class="show-less">Show Less</a>
                        </div>
                    </th>
                </tr>
            </tbody>
        </table>

    </div>
</div>