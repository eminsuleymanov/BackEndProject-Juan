@model Category

<div class="d-flex flex-row">
    <div class="col-lg-3">
        <h1 class="h3 mb-3 text-gray-800">Category Detail Page</h1>
    </div>
    <div class="col-lg-3">
        <h3 class="h3 mb-3">Category Name: <span style="color:green">@Model.Name</span></h3>
    </div>
    <div class="col-lg-3">
        <a class="btn btn-primary" asp-action="index" asp-controller="category" asp-area="manage">Go To Home</a>
    </div>
    <div class="row">
        <div class="col-lg-4">


        </div>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>@product.CreatedAt?.ToString("dd-MMMM-yyyy")</td>
                        <td>@product.CreatedBy</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>





